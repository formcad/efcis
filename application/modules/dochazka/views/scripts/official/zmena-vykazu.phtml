            $('#oficialni-dochazka-dochazka-'+radek).html(data[0]['dochazka']);
            $('#oficialni-dochazka-pauza-'+radek).html(data[0]['pauza']);
            $('#oficialni-dochazka-cistaDochazka-'+radek).html(data[0]['cistaDochazka']);                        
        }
