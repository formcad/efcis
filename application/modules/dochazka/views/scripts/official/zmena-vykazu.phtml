    // vykreslíme dialogové okno
    $("#div-dochazka-officialSumaPauzy").dialog({
        modal: true,
        width: 600,
        height: 360,
        buttons: {
            "Změnit": function() {

                // provedení odeslání formuláře - validace
                var chyba = null;

                $.ajax({
                    type: "POST",
                    url: "<?php echo $this->url(array('module'=>'dochazka',
