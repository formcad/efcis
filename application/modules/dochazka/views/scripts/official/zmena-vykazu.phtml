                        }
                    });
                }
                // změna není možná kvůli špatně vyplněnému formuláři
                else {
                    $("#div-dochazka-officialZmenaPriplatkuChyba").html(chyba);
                }
            },
            "Zrušit": function() {
                $( this ).dialog( "close" );
            }
        }
    });    
}

